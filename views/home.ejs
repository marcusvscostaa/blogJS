<%- include("partials/header") %>


<h1>HOME</h1>
<p><%= startingContent%></p>

<div class="row">
<% dataPosts.forEach(function(dataPosts, x){ %>


    <div class="col-lg-6 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="flex-row">
                    <h3><%= dataPosts.title%></h3>
                </div>
                <div class="flex-row-reverse">
                    <form action="/editDelete" method="post">
                        <button class="btnEdit" name="edit" value="<%=dataPosts._id%>">Edit <i class='fas fa-pen-square'></i></button>
                        <button class="btnDelete" name="delete" value="<%=dataPosts._id%>">Delete <i class='fa fa-trash	'></i></button>
                    </form>
                </div>    
            </div>
            <div class="card-body">
                <p class="card-text"><%= dataPosts.textArea.substring(0,100) + "..." %> 
                    <a href="posts/<%=dataPosts._id%>">Read More</a>
                </p>
            </div>
            <p class="ms-auto me-3 dataColor"><%= dataPosts.date %></p>
    </div>
</div>


<%console.log(x)%>
<%});%>
</div>



<%- include("partials/footer"); %>