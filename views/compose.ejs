<%- include("partials/header") %>

<div class="card">
    <div class="card-header">
        <h3>Compose</h3>
    </div>
    <div class="card-body">
        <form action="/compose" method="post">
            <div class="mb-3">
                <label for="titleCompose" class="form-label">Title</label>
                <input class="form-control" type="text" name="titleCompose" >
            </div>
            <div class="mb-3">
                <label for="postCompose" class="form-label">Post</label>
                <textarea class="form-control" type="text" name="postCompose" rows="6"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Publish</button>
        </form>
    </div>
</div>

<%- include("partials/footer") %>